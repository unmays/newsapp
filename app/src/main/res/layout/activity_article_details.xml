<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/articleDetailsHeading"
        style="@style/ArticleDetailsTextHeadingStyle"
        android:text="Real News"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/articleDetailsImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:src="@mipmap/app_logo_foreground"
        app:layout_constraintTop_toBottomOf="@id/articleDetailsHeading" />

    <TextView
        android:id="@+id/articleDetailsSubHeading"
        style="@style/ArticleDetailsTextSubHeadingStyle"
        android:text="The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog."
        app:layout_constraintTop_toBottomOf="@id/articleDetailsImage" />

    <TextView
        android:id="@+id/articleDetailsAuthor"
        style="@style/ArticleDetailsTextInfoStyle"
        android:text="John Doe"
        app:layout_constraintTop_toBottomOf="@id/articleDetailsSubHeading" />

    <TextView
        android:id="@+id/articleDetailsPublishedAt"
        style="@style/ArticleDetailsTextInfoStyle"
        android:layout_marginTop="@dimen/half_margin"
        android:text="11th November, 2020 10:00 AM"
        app:layout_constraintTop_toBottomOf="@id/articleDetailsAuthor" />

    <TextView
        android:id="@+id/articleDetailsContent"
        style="@style/ArticleDetailsTextContentStyle"
        android:text="The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog. The quick brown fox jumped over the lazy dog."
        app:layout_constraintTop_toBottomOf="@id/articleDetailsPublishedAt" />

</androidx.constraintlayout.widget.ConstraintLayout>